{{> header}}
{{> navbar}}
<div class="container m-genre">
<div class="d-flex flex-row justify-content-between mar-bot">
    <h1 class="fw-bold">Car.</h1>
    <button class="btn btn-primary text-uppercase btn-sm-lg" style="height: 40px !important;"><a href="/car/addCar" class="text-decoration-none text-light">Add data</a></button>
</div>
<hr>
    <table class="table table-striped table-hover border">
    <thead>
        <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Plat Number</th>
        <th scope="col">Price</th>
        <th scope="col">Photo</th>
        <th scope="col">Status</th>
        <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        {{#each car}}    
        <th scope="row">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>{{this.plat_number}}</td>
            <td>{{this.price}}</td>
            <td>{{this.photo}}</td>
            <td>{{this.status}}</td>
            <td>
                <div class="text-start">
                    <a href="/car/editCar/{{this.id}}">
                        Edit
                    </a> | 
                    <a href="/car/deleteCar/{{this.id}}">
                        Delete
                    </a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
    </table>
</div>
{{> footer}}