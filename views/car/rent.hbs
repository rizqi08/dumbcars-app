{{> header}}
{{> navbar}}

<div class="container m-genre">
<div class="d-flex flex-row justify-content-between mar-bot">
    <h1 class="fw-bold">Rent Car.</h1>
<button class="btn btn-primary text-uppercase btn-sm-lg" style="height: 40px !important;"><a href="/car/addRent" class="text-decoration-none text-light">Add data</a></button>
</div>
<hr>
    <table class="table table-striped table-hover border">
    <thead>
        <tr>
        <th scope="col">No</th>
        <th scope="col">Borrow</th>
        <th scope="col">Return</th>
        <th scope="col">Subtotal</th>
        <th scope="col">Car</th>
        <th scope="col">Control</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        {{#each rent}}    
        <th scope="row">{{this.id}}</th>
            <td>{{this.borrow_date}}</td>
            <td>{{this.return_date}}</td>
            <td>{{this.sub_total}}</td>
            <td>{{this.car_id}}</td>
            <td>
                <div class="text-start">
                    <a href="/car/editRent/{{this.id}}">
                        Edit
                    </a> | 
                    <a href="/car/deleteRent/{{this.id}}">
                        Delete
                    </a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
    </table>
</div>

{{> footer}}